{
  "name": "runhuman-action",
  "version": "1.0.0",
  "description": "Unified GitHub Action for Runhuman QA testing",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
