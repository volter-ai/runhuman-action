    "runhuman"
  ],
  "author": "Runhuman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/volter-ai/runhuman-action/issues"
  },
  "homepage": "https://github.com/volter-ai/runhuman-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@runhuman/shared": "file:../shared",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
